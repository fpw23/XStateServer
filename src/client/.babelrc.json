{
    "sourceMap": true,
    "plugins": [
        "react-hot-loader/babel",
        "@babel/plugin-syntax-dynamic-import",
        ["@babel/plugin-proposal-class-properties", { "loose": true }],
        "@babel/plugin-proposal-export-default-from",
        ["module-resolver", {
            "alias": {
              "common-controls": "./src/client/Controls",
              "common-views": "./src/client/Views",
              "common-classes": "./src/client/Classes"
            }
        }]
    ],
    "presets": [
        "@babel/preset-env", 
        "@babel/preset-react"
    ]
}